  <body>
    <div id="wrapper">
      <div class="container-fluid">
	<div class="navbar">
	  <div class="navbar-inner navbar-inverse" style="border:none">
	    <div class="pull-right">
	      <ul class="nav">
		<li class="active"><a href="index.html">Home</a></li>

	      </ul>
	    </div>
	  </div>
	</div>
      </div> <!-- /container -->
      <div id="header">
	<div class="container-fluid">
	  <h1 id="title">
            <span style="font-size: 200%">JUXT</span>
	  </h1>
	</div> <!-- /container -->
      </div> <!-- /header -->
      <div id="content">
        <div class="container-fluid">
          <div class="row-fluid">
            <div class="span11">
              <h4><i>Software practitioners using Clojure to solve complex business problems</i></h4>
            </div>
          </div>
          <hr class="row-divider"/>
          <div class="row-fluid">
            <div class="span6">
              {{#markdown}}intro.md{{/markdown}}
	    </div>

	    <div class="span6">
              {{#markdown}}contact.md{{/markdown}}
	    </div>
          </div>

          <hr class="row-divider"/>

          <div class="row-fluid">
            <div class="span4">
              <div class="service">
                <div class="service-icon">
                  <span class="lsf-icon" title="pencil"></span>
                </div>
                {{#markdown}}training.md{{/markdown}}
              </div>
	    </div>
            <div class="span4">
              <div class="service">
                <div class="service-icon">
                  <span class="lsf-icon" title="gear"></span>
                </div>
                {{#markdown}}consulting.md{{/markdown}}
              </div>
	    </div>
            <div class="span4">
              <div class="service">
                <div class="service-icon">
                  <span class="lsf-icon" title="arrowright"></span>
                </div>
                {{#markdown}}speaking.md{{/markdown}}
              </div>
	    </div>
          </div>
	</div>
      </div>
      <div id="footer">
        <div class="container-fluid">
&copy; JUXT 2013
          <div class="row-fluid">
